{
    "name": "cakephp-extended/plugin-app-installer",
    "description": "Install your CakePHP 3.0+ plugins in plugins folder inside your App",
    "type": "composer-installer",
    "license": "MIT",
    "authors": [
        {
            "name": "Fernando Pita"
        }
    ],
    "require-dev": {
        "composer/composer": "1.0.*@dev",
        "phpunit/phpunit": "^4.8|^5.7|^6.0",
        "cakephp/cakephp-codesniffer": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Custom\\Composer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Custom\\Test\\Composer\\": "tests"
        }
    },
    "extra": {
        "class": "Custom\\Composer\\Installer\\PluginAppInstaller"
    }
}
